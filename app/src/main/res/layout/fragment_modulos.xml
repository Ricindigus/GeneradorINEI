<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margenMaterial"
    android:orientation="vertical"
    tools:context="pe.com.ricindigus.generadorinei.fragments.creacion.ModulosFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESAR MÃ“DULOS"
        android:gravity="center"
        android:textSize="@dimen/textoMedium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_modulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_modulos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_agregar"
            android:backgroundTint="@color/colorPrimary"
            android:layout_margin="@dimen/margenMaterial"/>
    </RelativeLayout>
    <Button
        android:id="@+id/modulo_btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="guardar"
        android:theme="@style/RaisedButtonDark2"/>

</LinearLayout>
