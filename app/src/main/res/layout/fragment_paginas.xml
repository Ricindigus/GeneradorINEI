<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margenMaterial"
    android:orientation="vertical"
    tools:context="pe.com.ricindigus.generadorinei.fragments.creacion.PaginasFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESAR PÁGINAS"
        android:gravity="center"
        android:textSize="@dimen/textoMedium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:padding="@dimen/margin10dp"
        android:background="@drawable/border_layout_subpreguntas"
        android:layout_marginBottom="@dimen/margin10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="@dimen/margin10dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/pagina_numero"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="N°"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_modulo"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="MODULO"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP1"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP2"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP3"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP4"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP5"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP6"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP7"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP8"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP9"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
        <TextView
            android:id="@+id/pagina_tipo10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TP10"
            android:textColor="@color/colorIcons"
            android:padding="@dimen/margin5dp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/margin10dp"
        android:background="@drawable/borde_layout_preguntas">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_paginas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
