<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pe.com.ricindigus.generadorinei.fragments.CaratulaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margenMaterial">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOCALIZACION DE LA EMPRESA"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margenMaterial"
            android:background="@color/greyBluePrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="A. UBICACION GEOGRÁFICA"
                android:textColor="@color/colorIcons"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/greyBluePrimaryDark"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="1. DEPARTAMENTO"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2. PROVINCIA"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="3. DISTRITO"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margenMaterial"
            android:background="@color/greyBluePrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="B. COORDENADAS DEL PUNTO GPS"
                android:textColor="@color/colorIcons"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/greyBluePrimaryDark"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="4. GPS LATITUD"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="4. GPS LONGITUD"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="4. GPS ALTITUD"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAPTURAR GPS"
                    android:textStyle="bold"
                    android:textColor="@color/colorIcons"
                    android:backgroundTint="@color/greyBluePrimaryDark"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/greyBluePrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="C. UBICACION MUESTRAL"
                android:textColor="@color/colorIcons"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/greyBluePrimaryDark"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="5. SECTOR DE TRABAJO"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <EditText
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="1"
                            android:background="@drawable/sumaedit_edittext_limpio"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="6. ÁREA DE TRABAJO"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <EditText
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="1"
                            android:background="@drawable/sumaedit_edittext_limpio"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="7. ZONA"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <EditText
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="1"
                            android:background="@drawable/sumaedit_edittext_limpio"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="8. MANZANA"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <EditText
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="1"
                            android:background="@drawable/sumaedit_edittext_limpio"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="9. FRENTE"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/greyBluePrimary"/>
                        <EditText
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:text="1"
                            android:background="@drawable/sumaedit_edittext_limpio"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    


