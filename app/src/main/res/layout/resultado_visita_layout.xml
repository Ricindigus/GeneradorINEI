<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyBluePrimary">
        <TextView
            android:id="@+id/formulario_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESULTADO DE LA ENCUESTA"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/greyBluePrimaryDark"/>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="RESULTADO FINAL DE LA ENCUESTA"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@color/greyBluePrimary"
                        android:gravity="center_vertical"/>
                    <View
                        android:layout_marginRight="@dimen/margin5dp"
                        android:layout_marginLeft="@dimen/margin5dp"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/greyBluePrimary"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2">
                        <TextView
                            android:id="@+id/visitas_resultado_final"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/colorPrimaryText"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="FECHA DEL RESULTADO FINAL"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/greyBluePrimary"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/visitas_fecha_final"
                                android:paddingLeft="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="28/12/2017"
                                android:textColor="@color/colorPrimaryText"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="HORA DEL RESULTADO FINAL"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/greyBluePrimary"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/greyBluePrimary"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="2">
                            <TextView
                                android:id="@+id/visitas_hora_final"
                                android:paddingLeft="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="12:05"
                                android:textColor="@color/colorPrimaryText"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>