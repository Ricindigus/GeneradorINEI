<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margenMaterial"
    tools:context="pe.com.ricindigus.generadorinei.activities.creacion.activities_dialogs.IngresarPaginaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESAR NUEVA PÁGINA"
        android:textSize="@dimen/textGrande"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/margin10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/pagina_btnGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="guardar"
            android:theme="@style/RaisedButtonDark2"/>
        <Button
            android:id="@+id/pagina_btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cancelar"
            android:theme="@style/RaisedButtonDark2"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pagina_txtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID"
                    android:focusableInTouchMode="false"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="@dimen/margin15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MODULO"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/pagina_spModulo"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREGUNTAS (Máx 10 preguntas x página)"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin15dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_layout_subpreguntas"
                android:padding="@dimen/margenMaterial">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRIMERA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo1"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>

                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEGUNDA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo2"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TERCERA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"/>

                <Spinner
                    android:id="@+id/pagina_spTipo3"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUARTA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo4"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QUINTA PREGUNTA"
                    android:layout_marginBottom="@dimen/margin10dp"/>

                <EditText
                    android:id="@+id/pagina_txtN5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo5"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEXTA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo6"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SETIMA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo7"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OCTAVA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo8"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOVENA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo9"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
                <TextView
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DÉCIMA PREGUNTA"/>

                <EditText
                    android:id="@+id/pagina_txtN10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÚMERO"
                    android:inputType="number"/>

                <Spinner
                    android:id="@+id/pagina_spTipo10"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tipos_componentes"
                    android:drawSelectorOnTop="true"
                    android:layout_marginBottom="@dimen/margin10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
